{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "app.py" }
  ],
  "env": {
    "HUGGINGFACE_API_KEY": "@huggingface_api_key",
    "PYTHONUNBUFFERED": "1"
  }
}
